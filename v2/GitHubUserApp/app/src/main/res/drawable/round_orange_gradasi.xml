<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FF9800" />
            <gradient android:angle="-90" android:startColor="#b34700" android:endColor="#ff944d"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#FFC107" />
            <solid android:color="#FFEB3B"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <stroke android:width="0dip" android:color="#FF9800" />
            <gradient android:angle="-90" android:startColor="#ffb380" android:endColor="#ff6600"/>
        </shape>
    </item>
</selector>